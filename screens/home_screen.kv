<HomeScreen>:
    canvas.before:
        Color:
            rgba: 0.6, 0.85, 0.65, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.2, 0.6, 0.3, 0.3
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        BoxLayout:
            orientation: 'vertical'
            spacing: 12
            padding: [30, 40, 30, 40]
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Image:
                source: 'assets/logo.png'
                size_hint: (1, 0.35)
                allow_stretch: True
                keep_ratio: True

            RelativeLayout:
                size_hint: (1, 0.25)

                Label:
                    text: 'mulai tebak kata'
                    color: 0, 0, 0, 0.25
                    font_size: '18sp'
                    bold: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.515}

                Button:
                    text: 'mulai tebak kata'
                    font_size: '18sp'
                    bold: True
                    color: 0, 0, 0, 1
                    size_hint: None, None
                    size: 250, 60
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    background_normal: ''
                    background_down: ''
                    background_color: 1, 0.9, 0.4, 1
                    canvas.before:
                        Color:
                            rgba: 1, 0.85, 0.3, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [30]
                    on_release:
                        root.mulai_quiz()

        Label:
            id: countdown_label
            text: ''
            font_size: '120sp'
            bold: True
            color: 1, 0, 0, 1
            opacity: 0
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
