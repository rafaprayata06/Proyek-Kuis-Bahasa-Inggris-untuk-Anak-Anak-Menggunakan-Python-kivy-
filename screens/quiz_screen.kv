<QuizScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.6, 0.85, 0.65, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.95, None
            height: self.minimum_height
            spacing: 30
            pos_hint: {'center_x': 0.5, 'center_y': 0.62}

            FloatLayout:
                size_hint_y: None
                height: 150

                canvas.before:
                    Color:
                        rgba: 1, 0.94, 0.84, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 2
                        rectangle: (self.x, self.y, self.width, self.height)

                Label:
                    id: pertanyaan
                    text: "Pertanyaan akan tampil di sini"
                    font_size: 18
                    bold: True
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            GridLayout:
                cols: 2
                spacing: [10, 15]
                row_default_height: 50
                row_force_default: True
                size_hint_y: None
                height: self.minimum_height

                Button:
                    id: btn0
                    text: ""
                    background_normal: ""
                    background_color: 0.75, 0.85, 1, 1
                    color: 0, 0, 0, 1
                    font_size: 20
                    bold: True
                    on_press: root.jawab(self.text)

                Button:
                    id: btn1
                    text: ""
                    background_normal: ""
                    background_color: 0.75, 0.85, 1, 1
                    color: 0, 0, 0, 1
                    font_size: 20
                    bold: True
                    on_press: root.jawab(self.text)

                Button:
                    id: btn2
                    text: ""
                    background_normal: ""
                    background_color: 0.75, 0.85, 1, 1
                    color: 0, 0, 0, 1
                    font_size: 20
                    bold: True
                    on_press: root.jawab(self.text)

                Button:
                    id: btn3
                    text: ""
                    background_normal: ""
                    background_color: 0.75, 0.85, 1, 1
                    color: 0, 0, 0, 1
                    font_size: 20
                    bold: True
                    on_press: root.jawab(self.text)
